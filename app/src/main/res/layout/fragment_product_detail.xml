<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.user.ProductDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Hình ảnh sản phẩm -->
        <ImageView
            android:id="@+id/imgAnhSanPham"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:background="@drawable/circle_background"
            android:contentDescription="Product Image"
            android:scaleType="centerCrop" />

        <!-- Tên sản phẩm -->
        <TextView
            android:id="@+id/tvTenSanPham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"
            android:text="Product Name"
            android:textSize="24sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvtengia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="Giá: "
                android:layout_marginRight="8dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
            <!-- Giá sản phẩm -->
            <TextView
                android:id="@+id/tvGiaSanPham"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="Price"
                android:textColor="#CC0000"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Mô tả sản phẩm -->
        <TextView
            android:id="@+id/tvtenmota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Mô tả: "
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvmoTa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingBottom="16dp"
            android:text="Product description goes here..."
            android:background="@drawable/edittext_border"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvtensoluong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng:"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginRight="8dp" />
            <!-- Nút giảm số lượng -->
            <ImageButton
                android:id="@+id/btnGiam"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_remove_24"
                android:backgroundTint="@color/gray"
                android:contentDescription="Decrease quantity"/>

            <!-- Hiển thị số lượng -->
            <TextView
                android:id="@+id/tvSoLuong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="18sp"
                android:padding="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp" />

            <!-- Nút tăng số lượng -->
            <ImageButton
                android:id="@+id/btnTang"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_add_24"
                android:backgroundTint="@color/gray"
                android:contentDescription="Increase quantity" />
        </LinearLayout>
        <!-- Nút thêm vào giỏ hàng -->
        <Button
            android:id="@+id/btnThemVaoGio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/orange"
            android:padding="12dp"
            android:text="Thêm vào giỏ hàng"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>

</FrameLayout>