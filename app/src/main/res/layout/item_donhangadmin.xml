<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/tvMaDonHang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DH01"
                android:textColor="#F26C62"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMaTaiKhoan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TK02"
                android:textColor="#2D9DF6"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvDanhSachSanPham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DSSP"/>

            <TextView
                android:id="@+id/tvTongTien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="120000"/>

            <TextView
                android:id="@+id/tvNgayMua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NGAYMUA"/>

            <TextView
                android:id="@+id/tvTrangThai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Đang giao hàng"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>