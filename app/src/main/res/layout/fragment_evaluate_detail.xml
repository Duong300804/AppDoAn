<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.user.EvaluateDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Tiêu đề -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đánh giá chi tiết"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp" />

        <!-- Hiển thị tên đơn hàng -->
        <TextView
            android:id="@+id/tvOrderCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã đơn hàng: "
            android:textSize="18sp"
            android:paddingBottom="16dp" />

        <!-- Đánh giá số sao -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đánh giá"
            android:textSize="16sp"
            android:paddingBottom="8dp" />
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0"
            android:rating="0" />

        <!-- Nhập nhận xét -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhận xét"
            android:textSize="16sp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />
        <EditText
            android:id="@+id/edtComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border"
            android:hint="Nhập nhận xét của bạn..."
            android:gravity="top"
            android:minLines="3"
            android:padding="10dp" />

        <!-- Nhập nhận xét -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dịch vụ của người bán"
            android:textSize="16sp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />
        <EditText
            android:id="@+id/edtComment2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border"
            android:hint="Nhập nhận xét của bạn..."
            android:gravity="top"
            android:minLines="3"
            android:padding="10dp" />

        <!-- Nhập nhận xét -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tốc độ giao hàng"
            android:textSize="16sp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp" />
        <EditText
            android:id="@+id/edtComment3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border"
            android:hint="Nhập nhận xét của bạn..."
            android:gravity="top"
            android:minLines="3"
            android:padding="10dp" />

        <!-- Nút gửi đánh giá -->
        <Button
            android:id="@+id/btnGuiDanhGia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gửi đánh giá"
            android:textSize="18sp"
            android:backgroundTint="@color/orange"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            android:padding="12dp" />
    </LinearLayout>


</FrameLayout>