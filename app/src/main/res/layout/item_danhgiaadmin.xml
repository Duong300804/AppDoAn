<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Mã Đánh Giá -->
    <TextView
        android:id="@+id/tvMaDanhGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã đánh giá: #12345"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Mã Đơn Hàng -->
    <TextView
        android:id="@+id/tvMaDonHang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Mã đơn hàng: #98765"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <!-- Mã Đơn Hàng -->
    <TextView
        android:id="@+id/tvTenTaiKhoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Mã tai khoan"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <!-- Số Sao -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số sao: "
            android:textColor="@color/black"
            android:textSize="14sp" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="1" />
    </LinearLayout>

    <!-- Nội dung Đánh Giá -->
    <TextView
        android:id="@+id/tvDanhGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Đánh giá: Rất hài lòng với sản phẩm!"
        android:textColor="@color/black"
        android:textSize="14sp" />

</LinearLayout>